#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
main() {
  __sh2_loc="tests/fixtures/truthiness_while_scalar.sh2:2:3"
  x='go'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  while [ -n "$x" ]; do
    printf '%s\n' 'loop'
    __sh2_loc="tests/fixtures/truthiness_while_scalar.sh2:5:5"
    x=''
    __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  done
  printf '%s\n' 'done'
}
__sh2_status=0
main "$@"
