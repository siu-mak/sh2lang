show() {
  if [ "$#" = "3" ]; then
    printf '%s\n' 'argc_ok'
  else
    printf '%s\n' 'argc_bad'
  fi
  if [ "$2" = 'y' ]; then
    printf '%s\n' 'arg_ok'
  else
    printf '%s\n' 'arg_bad'
  fi
  if [ "$( arr=("$@"); idx=$(( 0 )); printf "%s" "${arr[idx]}" )" = 'x' ]; then
    printf '%s\n' 'index_ok'
  else
    printf '%s\n' 'index_bad'
  fi
  printf '%s\n' "$( IFS=','; printf "%s" "$*" )"
  if [ "$#" = "3" ]; then
    printf '%s\n' 'count_ok'
  else
    printf '%s\n' 'count_bad'
  fi
}

main() {
  show 'x' 'y' 'z'
}

__sh2_status=0
main "$@"
