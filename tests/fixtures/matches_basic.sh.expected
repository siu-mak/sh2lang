#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_matches() { [[ "$1" =~ $2 ]]; }
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/matches_basic.sh2:2:5"
  s='hello'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if __sh2_matches "$s" 'h.*o'; then
    printf '%s\n' 'yes'
  else
    printf '%s\n' 'no'
  fi
  if __sh2_matches "$s" '^x'; then
    printf '%s\n' 'bad'
  else
    printf '%s\n' 'ok'
  fi
  printf '%s\n' "$( if __sh2_matches "$s" 'h.*o'; then printf "%s" "true"; else printf "%s" "false"; fi )"
  printf '%s\n' "$( if __sh2_matches "$s" '^x'; then printf "%s" "true"; else printf "%s" "false"; fi )"
}
__sh2_status=0
main "$@"
