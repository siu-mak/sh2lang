#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; mode="$3"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; if [ "$mode" = "return" ]; then return "$s"; else exit "$s"; fi; fi; }
main() {
  ( __sh2_loc="tests/fixtures/spawn_wait_status_pid.sh2:3:9"; 'sh' '-c' 'exit 7' ) &
  if [ "$!" -gt "0" ]; then
    printf '%s\n' 'pid_ok'
  else
    printf '%s\n' 'pid_bad'
  fi
  wait "$!"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ "$__sh2_status" = "7" ]; then
    printf '%s\n' 'status_ok'
  else
    printf '%s\n' 'status_bad'
  fi
}
__sh2_status=0
main "$@"
