main() {
  ( __sh2_loc="tests/fixtures/spawn_wait_status_pid.sh2:3"; 'sh' '-c' 'exit 7' ) &
  if [ "$!" -gt "0" ]; then
    printf '%s\n' 'pid_ok'
  else
    printf '%s\n' 'pid_bad'
  fi
  wait "$!"; __sh2_status=$?; (exit $__sh2_status)
  if [ "$__sh2_status" = "7" ]; then
    printf '%s\n' 'status_ok'
  else
    printf '%s\n' 'status_bad'
  fi
}
__sh2_status=0
main "$@"
