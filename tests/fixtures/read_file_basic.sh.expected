#!/usr/bin/env bash
__sh2_err_handler() { local s=$?; if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_read_file() { cat "$1" 2>/dev/null || true; }
__sh2_write_file() { if [ "$3" = "true" ]; then printf '%s' "$2" >> "$1"; else printf '%s' "$2" > "$1"; fi; }
main() {
  local __sh2_loc=""
  printf '%s' 'hello world' > 'tmp_read_basic.txt'
  __sh2_status=$?; (exit $__sh2_status)
  __sh2_loc="tests/fixtures/read_file_basic.sh2:4:5"
  s="$( __sh2_read_file 'tmp_read_basic.txt' )"
  __sh2_status=$?; (exit $__sh2_status)
  printf '%s\n' "$s"
}
__sh2_status=0
main "$@"
