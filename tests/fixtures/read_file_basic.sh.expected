__sh2_err_handler() { local s=$?; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
trap '__sh2_err_handler' ERR
__sh2_read_file() { cat "$1" 2>/dev/null || true; }
__sh2_write_file() { if [ "$3" = "true" ]; then printf '%s' "$2" >> "$1"; else printf '%s' "$2" > "$1"; fi; }
main() {
  __sh2_write_file 'tmp_read_basic.txt' 'hello world' 'false'
  __sh2_loc="tests/fixtures/read_file_basic.sh2:4:5"
  s="$( __sh2_read_file 'tmp_read_basic.txt' )"
  printf '%s\n' "$s"
}
__sh2_status=0
main "$@"
