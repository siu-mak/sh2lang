#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
main() {
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:2:3"
    'sh' '-c' 'exit 0'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  } && {
    printf '%s\n' 'and_ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:3:3"
    'sh' '-c' 'exit 1'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  } && {
    printf '%s\n' 'and_bad'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:5:3"
    'sh' '-c' 'exit 1'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  } || {
    printf '%s\n' 'or_ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:6:3"
    'sh' '-c' 'exit 0'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  } || {
    printf '%s\n' 'or_bad'
  }
}
__sh2_status=0
main "$@"
