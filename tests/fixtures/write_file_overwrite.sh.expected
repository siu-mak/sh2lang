#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; if (( s != 0 )); then if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
__sh2_read_file() { cat "$1"; }
__sh2_write_file() { if [ "$3" = "true" ]; then printf '%s' "$2" >> "$1"; else printf '%s' "$2" > "$1"; fi; }
main() {
  printf '%s' 'content' > 'output.txt'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ "$( trap '' ERR; __sh2_read_file 'output.txt' )" != 'content' ]; then
    exit "1"
  fi
}
__sh2_status=0
main "$@"
