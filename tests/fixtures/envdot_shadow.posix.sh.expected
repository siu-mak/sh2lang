#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
shadow() {
  FOO="${1}"
  printf '%s\n' "${FOO-}"
  printf '%s\n' "$FOO"
}

main() {
  __sh2_loc="tests/fixtures/envdot_shadow.sh2:6:1"
  FOO='outer'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  export FOO
  __sh2_loc="tests/fixtures/envdot_shadow.sh2:8:1"
  'shadow' 'local'; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
}
__sh2_status=0
main "$@"
