#!/usr/bin/env bash
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  ( 
    {
      __sh2_loc="tests/fixtures/wait_pid_basic.sh2:2:11"
      'sh' '-c' 'sleep 0.05'; __sh2_status=$?; (exit $__sh2_status)
    }
  ) &
  __sh2_loc="tests/fixtures/wait_pid_basic.sh2:3:3"
  p="$!"
  __sh2_status=$?; (exit $__sh2_status)
  wait "$p"; __sh2_status=$?; (exit $__sh2_status)
  printf '%s\n' 'done'
}
__sh2_status=0
main "$@"
