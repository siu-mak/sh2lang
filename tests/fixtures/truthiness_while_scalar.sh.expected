#!/usr/bin/env bash
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/truthiness_while_scalar.sh2:2:3"
  x='go'
  __sh2_status=$?; (exit $__sh2_status)
  while [ -n "$x" ]; do
    printf '%s\n' 'loop'
    __sh2_loc="tests/fixtures/truthiness_while_scalar.sh2:5:5"
    x=''
    __sh2_status=$?; (exit $__sh2_status)
  done
  printf '%s\n' 'done'
}
__sh2_status=0
main "$@"
