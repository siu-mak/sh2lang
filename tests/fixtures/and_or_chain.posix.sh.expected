#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
main() {
  {
    __sh2_loc="tests/fixtures/and_or_chain.sh2:2:3"
    'true'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  } && {
    printf '%s\n' 'ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_chain.sh2:3:3"
    'false'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  } || {
    printf '%s\n' 'fallback'
  }
}
__sh2_status=0
main "$@"
