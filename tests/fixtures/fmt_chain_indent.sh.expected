#!/usr/bin/env bash
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  {
    __sh2_loc="tests/fixtures/fmt_chain_indent.sh2:2:5"
    "$echo" 'a'; __sh2_status=$?; (exit $__sh2_status)
  } && {
    __sh2_loc="tests/fixtures/fmt_chain_indent.sh2:2:23"
    "$echo" 'b'; __sh2_status=$?; (exit $__sh2_status)
  }
  {
    if true; then
      printf '%s\n' 'x'
    fi
  } || {
    printf '%s\n' 'err'
  }
  {
    {
      __sh2_loc="tests/fixtures/fmt_chain_indent.sh2:6:5"
      "$a"; __sh2_status=$?; (exit $__sh2_status)
    } && {
      __sh2_loc="tests/fixtures/fmt_chain_indent.sh2:6:15"
      "$b"; __sh2_status=$?; (exit $__sh2_status)
    }
  } && {
    __sh2_loc="tests/fixtures/fmt_chain_indent.sh2:6:25"
    "$c"; __sh2_status=$?; (exit $__sh2_status)
  }
}
__sh2_status=0
main "$@"
