#!/usr/bin/env bash
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:2:3"
    'sh' '-c' 'exit 0'; __sh2_status=$?; (exit $__sh2_status)
  } && {
    printf '%s\n' 'and_ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:3:3"
    'sh' '-c' 'exit 1'; __sh2_status=$?; (exit $__sh2_status)
  } && {
    printf '%s\n' 'and_bad'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:5:3"
    'sh' '-c' 'exit 1'; __sh2_status=$?; (exit $__sh2_status)
  } || {
    printf '%s\n' 'or_ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:6:3"
    'sh' '-c' 'exit 0'; __sh2_status=$?; (exit $__sh2_status)
  } || {
    printf '%s\n' 'or_bad'
  }
}
__sh2_status=0
main "$@"
