__sh2_err_handler() { local s=$?; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
trap '__sh2_err_handler' ERR
main() {
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:2:3"
    'sh' '-c' 'exit 0'; __sh2_status=$?; (exit $__sh2_status)
  } && {
    printf '%s\n' 'and_ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:3:3"
    'sh' '-c' 'exit 1'; __sh2_status=$?; (exit $__sh2_status)
  } && {
    printf '%s\n' 'and_bad'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:5:3"
    'sh' '-c' 'exit 1'; __sh2_status=$?; (exit $__sh2_status)
  } || {
    printf '%s\n' 'or_ok'
  }
  {
    __sh2_loc="tests/fixtures/and_or_stmt.sh2:6:3"
    'sh' '-c' 'exit 0'; __sh2_status=$?; (exit $__sh2_status)
  } || {
    printf '%s\n' 'or_bad'
  }
}
__sh2_status=0
main "$@"
