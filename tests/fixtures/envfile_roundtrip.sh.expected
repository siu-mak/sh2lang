#!/usr/bin/env bash
__sh2_err_handler() { local s=$?; if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_load_envfile() { if [ -r "$1" ]; then awk '{ sub(/^[[:space:]]+/, ""); sub(/[[:space:]]+$/, ""); if($0=="" || substr($0,1,1)=="#") next; if(substr($0,1,7)=="export ") sub(/^export[[:space:]]+/, ""); idx=index($0,"="); if(idx==0) next; k=substr($0,1,idx-1); v=substr($0,idx+1); sub(/^[[:space:]]+/, "", k); sub(/[[:space:]]+$/, "", k); sub(/^[[:space:]]+/, "", v); sub(/[[:space:]]+$/, "", v); len=length(v); if(len>=2){ f=substr(v,1,1); l=substr(v,len,1); if((f=="\047" && l=="\047") || (f=="\"" && l=="\"")){ v=substr(v,2,len-2) } } printf "%s\t%s\n", k, v }' "$1" 2>/dev/null || true; fi; }
__sh2_save_envfile() { printf '%s' "$2" | awk -F '\t' 'NF>=1{ print $1 "=" $2 }' > "$1"; }
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/envfile_roundtrip.sh2:2:3"
  m="$( __sh2_load_envfile 'env.meta' )"
  __sh2_status=$?; (exit $__sh2_status)
  __sh2_save_envfile 'out.meta' "$m"; __sh2_status=$?; (exit $__sh2_status)
  __sh2_loc="tests/fixtures/envfile_roundtrip.sh2:4:3"
  m2="$( __sh2_load_envfile 'out.meta' )"
  __sh2_status=$?; (exit $__sh2_status)
  printf '%s\n' "$m2"
}
__sh2_status=0
main "$@"
