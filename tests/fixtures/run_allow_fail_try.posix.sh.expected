#!/bin/sh
main() {
  case $- in *e*) __sh2_e=1;; *) __sh2_e=0;; esac; set +e
  if {
    {
      __sh2_status=0; 'sh' '-c' 'exit 7' || __sh2_status=$?; :
    } && {
      printf '%s\n' 'AFTER'
    } && {
      printf '%s\n' 'STATUS='"$__sh2_status"
    }
  }; then
    if [ "${__sh2_e:-0}" = 1 ]; then set -e; fi
  else
    if [ "${__sh2_e:-0}" = 1 ]; then set -e; fi
    printf '%s\n' 'CAUGHT'
  fi
}
__sh2_status=0
main "$@"
