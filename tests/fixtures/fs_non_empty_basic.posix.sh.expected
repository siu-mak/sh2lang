#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
main() {
  __sh2_loc="tests/fixtures/fs_non_empty_basic.sh2:2:5"
  'sh' '-c' 'rm -f empty nonempty; : > empty; echo hi > nonempty'; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ -s 'nonempty' ]; then
    printf '%s\n' 'nonempty_ok'
  else
    printf '%s\n' 'nonempty_bad'
  fi
  if ! [ -s 'empty' ]; then
    printf '%s\n' 'empty_ok'
  else
    printf '%s\n' 'empty_bad'
  fi
  if ! [ -s 'missing' ]; then
    printf '%s\n' 'missing_ok'
  else
    printf '%s\n' 'missing_bad'
  fi
}
__sh2_status=0
main "$@"
