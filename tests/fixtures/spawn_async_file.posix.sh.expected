#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
main() {
  __sh2_loc="tests/fixtures/spawn_async_file.sh2:2:5"
  f='flag.txt'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_loc="tests/fixtures/spawn_async_file.sh2:3:5"
  'rm' '-f' "$f"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  ( __sh2_loc="tests/fixtures/spawn_async_file.sh2:4:11"; 'sh' '-c' 'sleep 0.05; echo x > flag.txt' ) &
  if [ -e "$f" ]; then
    printf '%s\n' 'WRONG_EARLY'
  else
    printf '%s\n' 'notyet'
  fi
  wait; __sh2_status=$?
  if [ -e "$f" ]; then
    printf '%s\n' 'done'
  else
    printf '%s\n' 'WRONG_LATE'
  fi
}
__sh2_status=0
main "$@"
