main() {
  __sh2_loc="tests/fixtures/spawn_async_file.sh2:2:5"
  f='flag.txt'
  __sh2_status=$?; (exit $__sh2_status)
  __sh2_loc="tests/fixtures/spawn_async_file.sh2:3:5"
  'rm' '-f' "$f"; __sh2_status=$?; (exit $__sh2_status)
