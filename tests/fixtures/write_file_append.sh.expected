__sh2_read_file() { cat "$1" 2>/dev/null || true; }
__sh2_write_file() { if [ "$3" = "true" ]; then printf '%s' "$2" >> "$1"; else printf '%s' "$2" > "$1"; fi; }
main() {
  __sh2_write_file 'tmp_append.txt' 'first' 'false'
  __sh2_write_file 'tmp_append.txt' 'second' 'true'
  printf '%s\n' "$( __sh2_read_file 'tmp_append.txt' )"
}
__sh2_status=0
main "$@"
