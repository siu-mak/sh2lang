#!/usr/bin/env bash
__sh2_err_handler() { local s=$?; if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  ( __sh2_loc="tests/fixtures/spawn_wait_status_pid.sh2:3:9"; 'sh' '-c' 'exit 7' ) &
  if [ "$!" -gt "0" ]; then
    printf '%s\n' 'pid_ok'
  else
    printf '%s\n' 'pid_bad'
  fi
  wait "$!"; __sh2_status=$?; (exit $__sh2_status)
  if [ "$__sh2_status" = "7" ]; then
    printf '%s\n' 'status_ok'
  else
    printf '%s\n' 'status_bad'
  fi
}
__sh2_status=0
main "$@"
