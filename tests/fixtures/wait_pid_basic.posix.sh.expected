#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
main() {
  ( 
    {
      __sh2_loc="tests/fixtures/wait_pid_basic.sh2:2:11"
      'sh' '-c' 'sleep 0.05'; __sh2_status=$?
      __sh2_check "$__sh2_status" "${__sh2_loc:-}"
    }
  ) &
  __sh2_loc="tests/fixtures/wait_pid_basic.sh2:3:3"
  p="$!"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  wait "$p"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' 'done'
}
__sh2_status=0
main "$@"
