#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; if [[ "$mode" == "return" ]]; then return "$s"; else exit "$s"; fi; fi; }
main() {
  (
    __sh2_log_path='test'
    : > "$__sh2_log_path"
    trap 'exec >&-; exec 2>&-; wait' EXIT
    exec > >(tee -a "$__sh2_log_path")
    exec 2> >(tee -a "$__sh2_log_path" >&2)
    printf '%s\n' 'hello'
  )
}
__sh2_status=0
main "$@"
