check() {
  local path="${1}"
  if [ -s "$path" ]; then return 0; else return 1; fi
}

main() {
  'sh' '-c' 'rm -f empty nonempty; : > empty; echo hi > nonempty'; __sh2_status=$?; (exit $__sh2_status)
  check 'nonempty'
  if [ "$__sh2_status" = "0" ]; then
    printf '%s\n' 'nonempty: ok'
  fi
  check 'empty'
  if [ "$__sh2_status" = "1" ]; then
    printf '%s\n' 'empty: ok'
  fi
}

__sh2_status=0
main "$@"
