__sh2_err_handler() { local s=$?; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
trap '__sh2_err_handler' ERR
check() {
  local path="${1}"
  if [ -s "$path" ]; then return 0; else return 1; fi
}

main() {
  __sh2_loc="tests/fixtures/return_fs_predicate.sh2:6:3"
  'sh' '-c' 'rm -f empty nonempty; printf '\'''\'' > empty; echo hi > nonempty'; __sh2_status=$?; (exit $__sh2_status)
  check 'nonempty'; __sh2_status=$?; (exit $__sh2_status)
  if [ "$__sh2_status" = "0" ]; then
    printf '%s\n' 'nonempty: ok'
  fi
  check 'empty'; __sh2_status=$?; (exit $__sh2_status)
  if [ "$__sh2_status" = "1" ]; then
    printf '%s\n' 'empty: ok'
  fi
}
__sh2_status=0
main "$@"
