#!/usr/bin/env bash
__sh2_err_handler() { local s=$?; if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/case_glob_dollar_and_backslash.sh2:2:5"
  x='cost '"$5"'\done'
  __sh2_status=$?; (exit $__sh2_status)
  case "$x" in
    'cost $'*'\done')
      printf '%s\n' 'hit_safe'
    ;;
    *)
      printf '%s\n' 'miss'
    ;;
  esac
}
__sh2_status=0
main "$@"
