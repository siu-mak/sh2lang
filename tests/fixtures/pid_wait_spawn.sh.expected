__sh2_err_handler() { local s=$?; if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  ( __sh2_loc="tests/fixtures/pid_wait_spawn.sh2:2:9"; 'sh' '-c' 'exit 0' ) &
  __sh2_loc="tests/fixtures/pid_wait_spawn.sh2:3:3"
  p="$!"
  wait "$p"; __sh2_status=$?; (exit $__sh2_status)
  if [ "$__sh2_status" = "0" ]; then
    printf '%s\n' 'wait_ok'
  else
    printf '%s\n' 'wait_bad'
  fi
}
__sh2_status=0
main "$@"
