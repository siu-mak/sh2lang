#!/usr/bin/env bash
__sh2_err_handler() { local s=$?; if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi; printf "Error in %s\n" "${__sh2_loc:-unknown}" >&2; return $s; }
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  ( __sh2_loc="tests/fixtures/pid_basic.sh2:2:11"; 'bash' '-c' 'exit 7' ) &
  __sh2_loc="tests/fixtures/pid_basic.sh2:3:5"
  p="$!"
  __sh2_status=$?; (exit $__sh2_status)
  wait "$p"; __sh2_status=$?; (exit $__sh2_status)
  printf '%s\n' "$__sh2_status"
}
__sh2_status=0
main "$@"
