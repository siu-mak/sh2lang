#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; }
__sh2_trim() { awk -v s="$1" 'BEGIN { sub(/^[[:space:]]+/, "", s); sub(/[[:space:]]+$/, "", s); printf "%s", s }'; }
main() {
  printf '%s\n' '>'"$( __sh2_trim '  hi	' )"'<'
  printf '%s\n' '>'"$( __sh2_trim ' 
	 ' )"'<'
}
__sh2_status=0
main "$@"
