#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; mode="$3"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; if [ "$mode" = "return" ]; then return "$s"; else exit "$s"; fi; fi; }
main() {
  {
    "$echo" 'a'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  } && {
    "$echo" 'b'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  }
  {
    if true; then
      printf '%s\n' 'x'
    fi
  } || {
    printf '%s\n' 'err'
  }
  {
    {
      "$a"; __sh2_status=$?
      __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
    } && {
      "$b"; __sh2_status=$?
      __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
    }
  } && {
    "$c"; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  }
}
__sh2_status=0
main "$@"
