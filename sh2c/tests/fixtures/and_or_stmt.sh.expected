#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
main() {
  {
    __sh2_cmd=''
    __sh2_cmd+='exit 0'
    __sh2_status=0; 'sh' -c "$__sh2_cmd" "_" "$@" || __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  } && {
    printf '%s\n' 'and_ok'
  }
  {
    __sh2_cmd=''
    __sh2_cmd+='exit 1'
    __sh2_status=0; 'sh' -c "$__sh2_cmd" "_" "$@" || __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  } && {
    printf '%s\n' 'and_bad'
  }
  {
    __sh2_cmd=''
    __sh2_cmd+='exit 1'
    __sh2_status=0; 'sh' -c "$__sh2_cmd" "_" "$@" || __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  } || {
    printf '%s\n' 'or_ok'
  }
  {
    __sh2_cmd=''
    __sh2_cmd+='exit 0'
    __sh2_status=0; 'sh' -c "$__sh2_cmd" "_" "$@" || __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "return"
  } || {
    printf '%s\n' 'or_bad'
  }
}
__sh2_status=0
main "$@"
