#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_tmpfile() { if command -v mktemp >/dev/null 2>&1; then mktemp; else printf "%s/sh2_tmp_%s_%s" "${TMPDIR:-/tmp}" "$$" "$(awk 'BEGIN{srand();print int(rand()*1000000)}')"; fi; }
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/capture_allow_fail_preserves_status.sh2:3:5"
    out__stdout_tmp=$(__sh2_tmpfile)
  out__stderr_tmp=$(__sh2_tmpfile)
  out__cs=0
  ( 'sh' '-c' 'printf '\''X'\''; exit 7' ) >"${out__stdout_tmp}" 2>"${out__stderr_tmp}" || out__cs=$?
  out__status="${out__cs}"
  __sh2_status="${out__cs}"
  out__stdout=$(cat "${out__stdout_tmp}")
  out__stderr=$(cat "${out__stderr_tmp}")
  out="${out__stdout}"
  rm -f "${out__stdout_tmp}" "${out__stderr_tmp}"
  __sh2_loc="tests/fixtures/capture_allow_fail_preserves_status.sh2:4:5"
  s="$__sh2_status"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' 'out='"$out"
  printf '%s\n' 'st='"$s"
  if [ "$s" != "7" ]; then
    printf '%s\n' 'FAIL: expected status 7, got '"$s" >&2
    exit "1"
  fi
}
__sh2_status=0
main "$@"
