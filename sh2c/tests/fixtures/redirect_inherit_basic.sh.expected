#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_tmpfile() { if command -v mktemp >/dev/null 2>&1; then mktemp; else printf "%s/sh2_tmp_%s_%s" "${TMPDIR:-/tmp}" "$$" "$(awk 'BEGIN{srand();print int(rand()*1000000)}')"; fi; }
__sh2_read_file() { cat "$1"; }
main() {
  local __sh2_loc=""
  {
    __sh2_fifo_out_0="/tmp/.${USER:-user}.sh2.fifo.out.0.$$"
    __sh2_fifo_err_0="/tmp/.${USER:-user}.sh2.fifo.err.0.$$"
    trap 'rm -f "$__sh2_fifo_out_0" "$__sh2_fifo_err_0"' RETURN
    mkfifo "$__sh2_fifo_out_0" || { __sh2_status=1; return 1; }
    ( tee 'out.txt' < "$__sh2_fifo_out_0" ) &
    __sh2_pid_out_0=$!
    mkfifo "$__sh2_fifo_err_0" || { __sh2_status=1; return 1; }
    ( tee 'err.txt' >&2 < "$__sh2_fifo_err_0" ) &
    __sh2_pid_err_0=$!
    {
      printf '%s\n' 'stdout line'
      printf '%s\n' 'stderr line' >&2
      __sh2_loc="tests/fixtures/redirect_inherit_basic.sh2:8:9"
            res__tmp_out="$(__sh2_tmpfile)"
      res__tmp_err="$(__sh2_tmpfile)"
      if 'sh' '-c' 'exit 7' >"${res__tmp_out}" 2>"${res__tmp_err}"; then res__status=0; else res__status=$?; fi;
      res__stdout="$(__sh2_read_file "$res__tmp_out")"
      res__stderr="$(__sh2_read_file "$res__tmp_err")"
      rm -f "$res__tmp_out" "$res__tmp_err"
      __sh2_status="$res__status"
      printf '%s\n' 'status='"$res__status"
    } >"$__sh2_fifo_out_0" 2>"$__sh2_fifo_err_0"
    __sh2_cs_0=$?
    wait "$__sh2_pid_out_0"
    __sh2_ts_out_0=$?
    wait "$__sh2_pid_err_0"
    __sh2_ts_err_0=$?
    __sh2_final_0=${__sh2_cs_0:-0}
    if [ "${__sh2_ts_out_0:-0}" -ne 0 ]; then __sh2_final_0=$__sh2_ts_out_0; fi
    if [ "${__sh2_ts_err_0:-0}" -ne 0 ]; then __sh2_final_0=$__sh2_ts_err_0; fi
    __sh2_status=$__sh2_final_0
  }
}
__sh2_status=0
main "$@"
