#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
main() {
  __sh2_loc="tests/fixtures/bool_str_basic.sh2:2:3"
  __sh2_cmd=''
  __sh2_cmd+='rm -f empty nonempty; : > empty; echo hi > nonempty'
  __sh2_status=0; 'sh' -c "$__sh2_cmd" "_" "$@" || __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' "$( if [ -s 'nonempty' ]; then printf "%s" "true"; else printf "%s" "false"; fi )"
  printf '%s\n' "$( if [ -s 'empty' ]; then printf "%s" "true"; else printf "%s" "false"; fi )"
  printf '%s\n' 'missing='"$( if [ -s 'missing' ]; then printf "%s" "true"; else printf "%s" "false"; fi )"
  printf '%s\n' 'not_empty='"$( if ! [ -s 'empty' ]; then printf "%s" "true"; else printf "%s" "false"; fi )"
}
__sh2_status=0
main "$@"
