#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; mode="$3"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; if [ "$mode" = "return" ]; then return "$s"; else exit "$s"; fi; fi; }
main() {
  __sh2_loc="tests/fixtures/status_after_run_no_wrapper.sh2:2:5"
  'sh' '-c' 'exit 9'; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  printf '%s\n' "$__sh2_status"
  __sh2_loc="tests/fixtures/status_after_run_no_wrapper.sh2:4:5"
  'echo' 'hi'; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  printf '%s\n' "$__sh2_status"
}
__sh2_status=0
main "$@"
