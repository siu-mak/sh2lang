#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_lines() { mapfile -t "$2" <<< "$1"; if [[ -z "$1" ]]; then eval "$2=()"; elif [[ "$1" == *$'\n' ]]; then eval "unset '$2[\${#$2[@]}-1]'"; fi; }
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/stdlib/lines.sh2:3:5"
  normal='a
b'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' '--- Normal ---'
  __sh2_lines "$normal" __sh2_for_lines_0
  for l in "${__sh2_for_lines_0[@]}"; do
    printf '%s\n' 'N:'"$l"
  done
  __sh2_loc="tests/fixtures/stdlib/lines.sh2:8:5"
  trailing='a
b
'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' '--- Trailing ---'
  __sh2_lines "$trailing" __sh2_for_lines_0
  for l in "${__sh2_for_lines_0[@]}"; do
    printf '%s\n' 'T:'"$l"
  done
  __sh2_loc="tests/fixtures/stdlib/lines.sh2:13:5"
  interior='a

b'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' '--- Interior ---'
  __sh2_lines "$interior" __sh2_for_lines_0
  for l in "${__sh2_for_lines_0[@]}"; do
    printf '%s\n' 'I:'"$l"
  done
  printf '%s\n' '--- Empty ---'
  __sh2_lines '' __sh2_for_lines_0
  for l in "${__sh2_for_lines_0[@]}"; do
    printf '%s\n' 'E:'"$l"
  done
  printf '%s\n' '--- Capture ---'
  __sh2_loc="tests/fixtures/stdlib/lines.sh2:23:5"
  cap="$( 'printf' 'x
y
' )"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_lines "$cap" __sh2_for_lines_0
  for l in "${__sh2_for_lines_0[@]}"; do
    printf '%s\n' 'C:'"$l"
  done
}
__sh2_status=0
main "$@"
