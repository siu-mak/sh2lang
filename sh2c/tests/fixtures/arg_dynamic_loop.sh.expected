#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_arg_by_index() { local __sh2_idx="$1"; shift; case "$__sh2_idx" in (''|*[!0-9]*) printf ''; return 0;; esac; [ "$__sh2_idx" -ge 1 ] 2>/dev/null || { printf ''; return 0; }; [ "$__sh2_idx" -le "$#" ] 2>/dev/null || { printf ''; return 0; }; eval "printf '%s' \"\${$__sh2_idx}\""; }
main() {
  local __sh2_loc=""
  printf '%s\n' 'argc: '"$#"
  for i in $(seq "1" "$#"); do
    printf '%s\n' 'arg['"$i"']: '"$( __sh2_arg_by_index "$i" "$@" )"
  done
  __sh2_loc="tests/fixtures/arg_dynamic_loop.sh2:9:5"
  oob="$( __sh2_arg_by_index "$(( ( $# + 1 ) ))" "$@" )"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' 'out of bounds: '\'''"$oob"''\'''
  __sh2_loc="tests/fixtures/arg_dynamic_loop.sh2:13:5"
  idx="2"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ "$#" -ge "2" ]; then
    printf '%s\n' 'arg['"$idx"']: '"$( __sh2_arg_by_index "$idx" "$@" )"
  fi
  printf '%s\n' 'arg[0]: '\'''"$( __sh2_arg_by_index "0" "$@" )"''\'''
  __sh2_loc="tests/fixtures/arg_dynamic_loop.sh2:20:5"
  neg="$(( ( 0 - 1 ) ))"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  printf '%s\n' 'arg[neg]: '\'''"$( __sh2_arg_by_index "$neg" "$@" )"''\'''
}
__sh2_status=0
main "$@"
