#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
__sh2_tmpfile() { if command -v mktemp >/dev/null 2>&1; then mktemp; else printf "%s/sh2_tmp_%s_%s" "${TMPDIR:-/tmp}" "$$" "$(awk 'BEGIN{srand();print int(rand()*1000000)}')"; fi; }
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/sh_allow_fail_capture.sh2:2:5"
    r__stdout_tmp=$(__sh2_tmpfile)
  r__stderr_tmp=$(__sh2_tmpfile)
  r__cs=0
  ( 'sh' 'printf out; printf err 1>&2; exit 7' ) >"${r__stdout_tmp}" 2>"${r__stderr_tmp}" || r__cs=$?
  r__status="${r__cs}"
  __sh2_status="${r__cs}"
  r__stdout=$(cat "${r__stdout_tmp}")
  r__stderr=$(cat "${r__stderr_tmp}")
  r="${r__stdout}"
  rm -f "${r__stdout_tmp}" "${r__stderr_tmp}"
  printf '%s\n' 'status: '"$r__status"
  printf '%s\n' 'stdout: '"$r__stdout"
  printf '%s\n' 'stderr: '"$r__stderr"
}
__sh2_status=0
main "$@"
