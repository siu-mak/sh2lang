#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  local __sh2_e=0; case $- in *e*) __sh2_e=1;; *) __sh2_e=0;; esac; set +e
  local __sh2_err=$(trap -p ERR || true); trap - ERR
  if {
    {
      __sh2_loc="tests/fixtures/pipe_fail_first.sh2:3:9"
      if ( set -o pipefail; set +e; 'sh' '-c' 'exit 5' | 'sh' '-c' 'echo cont' ); then __sh2_status=0; else __sh2_status=$?; fi; (exit $__sh2_status)
    } && {
      printf '%s\n' 'NO'
    }
  }; then
    if [ -n "$__sh2_err" ]; then eval "$__sh2_err"; fi; if [ "$__sh2_e" = 1 ]; then set -e; fi
  else
    if [ -n "$__sh2_err" ]; then eval "$__sh2_err"; fi; if [ "$__sh2_e" = 1 ]; then set -e; fi
    __sh2_loc="tests/fixtures/pipe_fail_first.sh2:6:9"
    s="$__sh2_status"
    __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}"
    printf '%s\n' 'CAUGHT'
    printf '%s\n' "$s"
  fi
}
__sh2_status=0
main "$@"
