#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_err_handler() {
  local s=$?
  local loc="${__sh2_loc:-}"
  if [[ "${BASH_COMMAND}" == *"(exit "* ]]; then return $s; fi
  if (( ${__sh2_suppress_err_depth:-0} > 0 )); then return "$s"; fi
  if [[ -z "$loc" ]]; then return $s; fi
  if [[ "$loc" == "${__sh2_last_err_loc:-}" && "$s" == "${__sh2_last_err_status:-}" ]]; then return $s; fi
  __sh2_last_err_loc="$loc"
  __sh2_last_err_status="$s"
  printf "Error in %s\n" "$loc" >&2
  return $s
}
set -o errtrace
trap '__sh2_err_handler' ERR
main() {
  local __sh2_loc=""
  __sh2_loc="tests/fixtures/bool_compare_variations.sh2:2:5"
  d='.'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_loc="tests/fixtures/bool_compare_variations.sh2:3:5"
  f='missing_dir_12345'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ -d "$d" ]; then
    printf '%s\n' 'EqTrue:ok'
  else
    printf '%s\n' 'EqTrue:fail'
  fi
  if ! [ -d "$f" ]; then
    printf '%s\n' 'EqFalse:ok'
  else
    printf '%s\n' 'EqFalse:fail'
  fi
  if ! [ -d "$f" ]; then
    printf '%s\n' 'NotEqTrue:ok'
  else
    printf '%s\n' 'NotEqTrue:fail'
  fi
  if [ -d "$d" ]; then
    printf '%s\n' 'NotEqFalse:ok'
  else
    printf '%s\n' 'NotEqFalse:fail'
  fi
  if [ -d "$d" ]; then
    printf '%s\n' 'SwapEqTrue:ok'
  else
    printf '%s\n' 'SwapEqTrue:fail'
  fi
  if [ -d "$d" ]; then
    printf '%s\n' 'SwapNotEqFalse:ok'
  else
    printf '%s\n' 'SwapNotEqFalse:fail'
  fi
}
__sh2_status=0
main "$@"
