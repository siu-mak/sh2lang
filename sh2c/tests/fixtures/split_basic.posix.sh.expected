#!/bin/sh
__sh2_check() { __sh2_s="$1"; __sh2_l="$2"; __sh2_m="$3"; if [ "$__sh2_s" -ne 0 ]; then if [ "$__sh2_m" = "return" ]; then return "$__sh2_s"; fi; if [ -n "$__sh2_l" ]; then printf 'Error in %s\n' "$__sh2_l" >&2; fi; exit "$__sh2_s"; fi; }
__sh2_tmpfiles=""
__sh2_tmpfile() {
    t=$(mktemp) || exit 1
    __sh2_tmpfiles="$__sh2_tmpfiles $t"
    echo "$t"
}
__sh2_cleanup_tmpfiles() {
    for t in $__sh2_tmpfiles; do rm -f "$t"; done
}
trap __sh2_cleanup_tmpfiles EXIT
__sh2_split() {
  awk -v s="$1" -v sep="$2" 'BEGIN {
     if(sep=="") { print s; exit }
     len=length(sep);
     while(i=index(s, sep)) { print substr(s, 1, i-1); s=substr(s, i+len) }
     print s
  }'
}
main() {
  __sh2_loc="tests/fixtures/split_basic.sh2:2:5"
  s='a,b,c'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_loc="tests/fixtures/split_basic.sh2:3:5"
  xs="$(__sh2_tmpfile)"
  __sh2_split "$s" ',' > "$xs"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_for_tmp_x=$(__sh2_tmpfile)
  {
    cat "$xs"
  } > "$__sh2_for_tmp_x"
  while IFS= read -r x || [ -n "$x" ]; do
    printf '%s\n' "$x"
  done < "$__sh2_for_tmp_x"
  rm -f "$__sh2_for_tmp_x"
}
__sh2_status=0
main "$@"
