#!/bin/sh
__sh2_check() { __sh2_s="$1"; __sh2_l="$2"; __sh2_m="$3"; if [ "$__sh2_s" -ne 0 ]; then if [ "$__sh2_m" = "return" ]; then return "$__sh2_s"; fi; if [ -n "$__sh2_l" ]; then printf 'Error in %s\n' "$__sh2_l" >&2; fi; exit "$__sh2_s"; fi; }
__sh2_sh_probe() { cmd="$1"; if sh -c "$cmd"; then __sh2_status=0; else __sh2_status=$?; fi; return 0; }
main() {
  __sh2_loc="tests/fixtures/redirect_io.sh2:3:3"
  f="$( 'mktemp' )"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  {
    printf '%s\n' 'out'
  } > "$f"
  {
    printf '%s\n' 'err' >&2
  } 2>> "$f"
  __sh2_loc="tests/fixtures/redirect_io.sh2:14:3"
  'cat' "$f"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  {
    printf '%s\n' 'e2s' >&2
  } 2>&1
  __sh2_loc="tests/fixtures/redirect_io.sh2:22:3"
  infile="$( 'mktemp' )"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_loc="tests/fixtures/redirect_io.sh2:23:3"
  __sh2_cmd='echo hello > '"$infile"
  __sh2_sh_probe "$__sh2_cmd"
  {
    __sh2_loc="tests/fixtures/redirect_io.sh2:25:5"
    'cat'; __sh2_status=$?
    __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  } < "$infile"
  __sh2_loc="tests/fixtures/redirect_io.sh2:29:3"
  f2="$( 'mktemp' )"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  {
    printf '%s\n' 'swap_ok'
  } 2> "$f2" 1>&2
  __sh2_loc="tests/fixtures/redirect_io.sh2:33:3"
  'cat' "$f2"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  __sh2_loc="tests/fixtures/redirect_io.sh2:36:3"
  'rm' '-f' "$f"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  __sh2_loc="tests/fixtures/redirect_io.sh2:37:3"
  'rm' '-f' "$infile"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  __sh2_loc="tests/fixtures/redirect_io.sh2:38:3"
  'rm' '-f' "$f2"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
}
__sh2_status=0
main "$@"
