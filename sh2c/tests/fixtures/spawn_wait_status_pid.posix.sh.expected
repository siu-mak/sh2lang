#!/bin/sh
__sh2_check() { __sh2_s="$1"; __sh2_l="$2"; __sh2_m="$3"; if [ "$__sh2_s" -ne 0 ]; then if [ "$__sh2_m" = "return" ]; then return "$__sh2_s"; fi; if [ -n "$__sh2_l" ]; then printf 'Error in %s\n' "$__sh2_l" >&2; fi; exit "$__sh2_s"; fi; }
main() {
  ( __sh2_loc="tests/fixtures/spawn_wait_status_pid.sh2:3:9"; 'sh' '-c' 'exit 7' ) &
  if [ "$!" -gt "0" ]; then
    printf '%s\n' 'pid_ok'
  else
    printf '%s\n' 'pid_bad'
  fi
  wait "$!"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ "$__sh2_status" = "7" ]; then
    printf '%s\n' 'status_ok'
  else
    printf '%s\n' 'status_bad'
  fi
}
__sh2_status=0
main "$@"
