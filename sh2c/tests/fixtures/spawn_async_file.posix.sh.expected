#!/bin/sh
__sh2_check() { __sh2_s="$1"; __sh2_l="$2"; __sh2_m="$3"; if [ "$__sh2_s" -ne 0 ]; then if [ "$__sh2_m" = "return" ]; then return "$__sh2_s"; fi; if [ -n "$__sh2_l" ]; then printf 'Error in %s\n' "$__sh2_l" >&2; fi; exit "$__sh2_s"; fi; }
main() {
  __sh2_loc="tests/fixtures/spawn_async_file.sh2:2:5"
  f='flag.txt'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  __sh2_loc="tests/fixtures/spawn_async_file.sh2:3:5"
  'rm' '-f' "$f"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}" "exit"
  ( __sh2_loc="tests/fixtures/spawn_async_file.sh2:4:11"; 'sh' '-c' 'sleep 0.05; echo x > flag.txt' ) &
  if [ -e "$f" ]; then
    printf '%s\n' 'WRONG_EARLY'
  else
    printf '%s\n' 'notyet'
  fi
  wait; __sh2_status=$?
  if [ -e "$f" ]; then
    printf '%s\n' 'done'
  else
    printf '%s\n' 'WRONG_LATE'
  fi
}
__sh2_status=0
main "$@"
