#!/usr/bin/env bash
__sh2_check() { local s="$1"; local loc="$2"; local mode="$3"; if (( s != 0 )); then if [[ "$mode" == "return" ]]; then return "$s"; else if [[ -n "$loc" ]]; then printf 'Error in %s\n' "$loc" >&2; fi; exit "$s"; fi; fi; }
__sh2_sh_probe() { local cmd="$1"; if bash -c "$cmd"; then __sh2_status=0; else __sh2_status=$?; fi; return 0; }
main() {
  __sh2_loc="tests/fixtures/sh_probe_status.sh2:2:5"
  __sh2_sh_probe 'exit 1'
  printf '%s\n' "$__sh2_status"
  __sh2_loc="tests/fixtures/sh_probe_status.sh2:5:5"
  __sh2_sh_probe 'exit 2'
  printf '%s\n' "$__sh2_status"
  __sh2_loc="tests/fixtures/sh_probe_status.sh2:8:5"
  __sh2_sh_probe 'true'
  printf '%s\n' "$__sh2_status"
  __sh2_loc="tests/fixtures/sh_probe_status.sh2:11:5"
  __sh2_sh_probe 'echo ok'
  printf '%s\n' "$__sh2_status"
}
__sh2_status=0
main "$@"
