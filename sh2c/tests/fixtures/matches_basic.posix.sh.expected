#!/bin/sh
set -x
__sh2_check() { s="$1"; loc="$2"; mode="$3"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; if [ "$mode" = "return" ]; then return "$s"; else exit "$s"; fi; fi; }
__sh2_matches() { printf '%s\n' "$1" | grep -Eq -- "$2"; }
main() {
  __sh2_loc="tests/fixtures/matches_basic.sh2:2:5"
  s='hello'
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if __sh2_matches "$s" 'h.*o'; then
    printf '%s\n' 'yes'
  else
    printf '%s\n' 'no'
  fi
  if __sh2_matches "$s" '^x'; then
    printf '%s\n' 'bad'
  else
    printf '%s\n' 'ok'
  fi
  printf '%s\n' "$( if __sh2_matches "$s" 'h.*o'; then printf "%s" "true"; else printf "%s" "false"; fi )"
  printf '%s\n' "$( if __sh2_matches "$s" '^x'; then printf "%s" "true"; else printf "%s" "false"; fi )"
}
__sh2_status=0
main "$@"
