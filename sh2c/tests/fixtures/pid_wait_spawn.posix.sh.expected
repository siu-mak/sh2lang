#!/bin/sh
__sh2_check() { s="$1"; loc="$2"; mode="$3"; if [ "$s" -ne 0 ]; then if [ -n "$loc" ]; then printf 'Error in %s\n' "$loc" >&2; fi; if [ "$mode" = "return" ]; then return "$s"; else exit "$s"; fi; fi; }
main() {
  ( __sh2_loc="tests/fixtures/pid_wait_spawn.sh2:2:9"; 'sh' '-c' 'exit 0' ) &
  __sh2_loc="tests/fixtures/pid_wait_spawn.sh2:3:3"
  p="$!"
  __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  wait "$p"; __sh2_status=$?
  __sh2_check "$__sh2_status" "${__sh2_loc:-}"
  if [ "$__sh2_status" = "0" ]; then
    printf '%s\n' 'wait_ok'
  else
    printf '%s\n' 'wait_bad'
  fi
}
__sh2_status=0
main "$@"
